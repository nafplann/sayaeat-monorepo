{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "pyramid",
  "sourceRoot": "services/pyramid",
  "projectType": "application",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "php artisan serve",
        "cwd": "services/pyramid"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "php artisan test",
        "cwd": "services/pyramid"
      },
      "outputs": ["{workspaceRoot}/services/pyramid/coverage"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "php ./vendor/bin/pint --test",
        "cwd": "services/pyramid"
      }
    },
    "lint-fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "php ./vendor/bin/pint",
        "cwd": "services/pyramid"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "composer install",
        "cwd": "services/pyramid"
      }
    }
  },
  "tags": []
}
